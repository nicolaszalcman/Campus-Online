@using Campus_virtual.Models;
@model Alumno
@{
    ViewBag.Title = "AgregarAlumno";
}
 <div class="container">
    <h2>Agregar Alumno</h2>

    @using (Html.BeginForm("AgregarAlumno", "Campus", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.Label("Nombre: ") @Html.TextBoxFor(x => x.Nombre, new { @class = "form-control" })<br />
                </div>
                <div class="form-group">
                    @Html.Label("Apellido: ") @Html.TextBoxFor(x => x.Apellido, new { @class = "form-control" })<br />
                </div>
                Division:
                <select name="IdDivision" id="IdDivision" class="form-control">
                    @foreach (var division in ViewBag.ListarDivisiones)
                {
                        <option value="@division.idDivision">@division.DivisionCompleta</option>
                    }
                </select>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.Label("Nombre de Usuario: ") @Html.TextBoxFor(x => x.NombreUsuario, new { @class = "form-control" })<br />
                </div>
                <div class="form-group">
                    @Html.Label("Contraseña: ") @Html.TextBoxFor(x => x.Contrasenia, new { @class = "form-control" })<br />

                </div>
                <input class="btn btn-default" type="submit" value="Aceptar" />
            </div>


        </div>
    }
</div>