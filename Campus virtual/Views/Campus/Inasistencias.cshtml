@{
    ViewBag.Title = "Inasistencias";
}
@{ int anio = 0;
    string division = "";
    int contador = 0;
}
                           
@using Campus_virtual.Models;
@model Falta


  
        <div class="container">
          
                @using (Html.BeginForm("ActualizarAnio", "Campus", FormMethod.Post))
                {
                    <h2>Inasistencias</h2>
                    <p>Fecha</p>@Html.TextBoxFor(x => x.fecha, new { @class = "form-control", Type = "date"  })
                    <div class="form-inline" role="form">
                        <div class="form-group">
                            <label for="sel1">Seleccionar Año</label>
                            <select id="anio" name="anio" class="form-control"  >
                                <option id="anio" value="1">1</option>
                                <option id="anio" value="2">2</option>
                                <option id="anio" value="3">3</option>
                                <option id="anio" value="4">4</option>
                                <option id="anio" value="5">5</option>
                                <option id="anio" value="6">6</option>
                            
                            </select>
                        
                        
                        </div>

                    

                        <div id="Division" class="form-group">
                           <div class="form-group">
                               <label for="sel1">Seleccionar Division</label>
                               <select id="anio" name="letra" class="form-control" >
                                   <option id="letra" value="A">A</option>
                                   <option id="letra" value="B">B</option>
                                  

                               </select>
                           </div>
                        </div>
                        <div id="materia" class="form-group">
                            <label for="sel1">Seleccionar Materia</label>
                            <select name="IdMateria" id="IdMateria" class="form-control" >
                                @foreach (var materia in ViewBag.listamateria)
                                {
                                    <option value="@materia.idMateria">@materia.Nombre</option>
                                }
                            </select>
                        </div><br /><br />

                        @Html.HiddenFor(x => x.fecha)
                    </div>
                    <button type="submit" class="btn btn-default">Cargar</button>
                
                }                                 
        </div>
