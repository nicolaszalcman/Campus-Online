<div class="container">
    <br />
    <br />
    <br />
    <form method="post" action="../Campus/login" class="form-horizontal" name="form" id="form">
        <div class="form-group">
            <label class="control-label col-sm-2" for="email">Usuario:</label>
            <div class="col-sm-10">
                <input name="usuario" type="text" class="form-control" id="usuario" placeholder="Ingrese usuario"required>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="pwd">Password:</label>
            <div class="col-sm-10">
                <input name="pwd" type="password" class="form-control" id="pwd" placeholder="Ingresar contraseña" required>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Submit</button>
            </div>
        </div>
        @if(@ViewBag.ReturnUrl != null)
        {
            <div class="alert alert-danger">
                <strong>Usuario Invalido</strong> Por favor vuelva a intentar.
            </div>
        }
    </form>
</div>