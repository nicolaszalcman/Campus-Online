@using Campus_virtual.Models

@{
    ViewBag.Title = "Altasancion";
}
@using Campus_virtual.Models;
@model Sancion
<div class="container">
    <h1>Agregar Sancion </h1>

   

    @using (Html.BeginForm("Altasancion", "Campus", FormMethod.Post))
    {

       <div class="row">
           <div class="col-md-6">
               <p>Fecha</p>@Html.TextBoxFor(x => x.fecha, new { @class = "form-control", Type = "date" })<br />
               @Html.DropDownListFor(x => x.idAlumno, new SelectList(@ViewBag.listaalumnos, "idAlumno", "nomYAp"), new { @class = "form-control"})
           </div>
              
           <div class="col-md-6">
               <p>Descripcion:</p> @Html.TextAreaFor(x => x.motivo, new { @class = "form-control" })<br />

               @Html.HiddenFor(x => x.IdSancion)<br />
               <input class="btn btn-default" type="submit" name="Enviar" />
           </div>
        </div>
      




    }


</div>