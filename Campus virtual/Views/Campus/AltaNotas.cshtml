||@{
    int contador = 0;

}

@model List<Campus_virtual.Models.Nota>

@using (Html.BeginForm("CargarNotas", "Campus", FormMethod.Post))
{
    <div class="container">
        <h1>Cargar Notas </h1>
        <table class="table table-hover">

            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Nota</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.listaalumnos)
                {
                    <tr>
                        <td>@item.Nombre</td>
                        <td>@item.Apellido </td>

                        <td>
                            @Html.TextBoxFor(x => x[contador].nota, new { @class = "form-control", Type = "number", min = "1" , max = "10" })
                        </td>
                    </tr>

                    @Html.HiddenFor(x => x[contador].IdAlumno , new { id = "idAlumno", name = "idAlumno", Value = item.idAlumno })


                    contador++;
                }

            </tbody>
        </table>
        <input type="submit" class="btn btn-default" />
    </div>
}


