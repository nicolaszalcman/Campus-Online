


@{
    ViewBag.Title = "AgregarNoticia";
}

@using Campus_virtual.Models;
@model Noticias
<div class="container">
    <h2>Agregar Noticia</h2>


    @using (Html.BeginForm("AgregarNoticia", "Campus", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
    {

            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Email:</label> 
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.Titulo, new { @class = "form-control" })
                </div>
                </div>
            @Html.Label("Fecha: ") @Html.TextBoxFor(x => x.Fecha)<br />
            @Html.Label("Descripcion: ") @Html.TextBoxFor(x => x.Descripcion)<br />
            @Html.Label("Foto: ") <input type="file" name="file" id="file" /><br />
            @Html.Label("Fuente: ") @Html.TextBoxFor(x => x.Nota)<br />

            <input type="submit" value="Aceptar" />
        
    }
</div>
